# 示例环境变量（请复制为 server/.env 并填写真实值）

# OpenAI 配置
OPENAI_API_KEY=sk-REPLACE_ME
# 可选：覆盖 OpenAI API Base URL（例如自建代理）
OPENAI_API_BASE=
# 可选：Azure OpenAI 版本号
AZURE_API_VERSION=

# 豆包（Doubao）配置
DOUBAO_API_KEY=
# 可选：豆包 API Base（默认 https://ark.cn-beijing.volces.com/api/v3）
DOUBAO_API_BASE=
# 可选：豆包聊天 / Embedding 模型
DOUBAO_CHAT_MODEL=doubao-seed-1-6-flash
DOUBAO_EMBED_MODEL=

# 可选：豆包采样参数
DOUBAO_TEMPERATURE=
DOUBAO_TOP_P=
DOUBAO_MAX_OUTPUT_TOKENS=

# 可选：豆包图像识别配置（未设置时回退至聊天模型）
DOUBAO_IMAGE_MODEL=
DOUBAO_IMAGE_API_BASE=
DOUBAO_IMAGE_MAX_BYTES=
DOUBAO_IMAGE_TIMEOUT_MS=
DOUBAO_IMAGE_MAX_OUTPUT_TOKENS=
DOUBAO_IMAGE_TEMPERATURE=
DOUBAO_IMAGE_TOP_P=

# 服务监听端口（默认 8000）
PORT=8000

# Runner 认证（可选，建议生产环境启用）
RUNNER_ACCESS_TOKEN=please-change-me

# 记忆持久化目录（默认 server_data/memory）
MEMORY_STORE_DIR=
